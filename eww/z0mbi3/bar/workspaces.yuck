;; Workspaces ;;
(deflisten workspace0 "scripts/WorkSpaces HDMI-1")
;; Workspaces Widgets ;;
(defwidget workspace0 [] (literal :content workspace0))
;; Workspaces Main Widget ;;
(defwidget workspaces [monitor]
   (box    :orientation "v"
           :space-evenly "false"
           :valign "start"
           (box :visible { monitor=="HDMI-1" } (workspace0))
))